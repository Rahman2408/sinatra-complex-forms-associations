<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
<label>Name:</label><br>
<input type="text" name="pet[name]" id="pet_name">

<h3>It's Owner: </h3><br>
<% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %><br>
    <% end %>


<h4>Create New Owner</h4>
<label>Owner Name: </label><br>
<input type="text" name="owner[name]" id="owner_name"><br><br>

<input type="submit" value="Create Pet">

    </form>